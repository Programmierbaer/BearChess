<Window x:Class="www.SoLaNoSoft.com.BearChessWpfCustomControlLib.QuerySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib"
        xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib.Properties"    
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Title="QuerySelectionWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Name="textBlockSelection" Margin="5" Grid.Row="0" >Auswahl</TextBlock>
            <ComboBox Name="comboBoxSelection" Grid.Column="1"></ComboBox>
        </Grid>
        <Button  Grid.Row="1" Margin="5" HorizontalAlignment="Left" Name="buttonOk" Width="32"
                Height="32"
                Click="ButtonOk_OnClick" Background="Transparent" BorderBrush="Transparent" >
            <Image Source="Assets/Icons/accept_button.png" />
        </Button>
        <Button Grid.Row="1" Margin="5" HorizontalAlignment="Right" Name="buttonCancel" Width="32"
                Height="32"
                Click="ButtonCancel_OnClick" Background="Transparent" BorderBrush="Transparent">
            <Image Source="Assets/Icons/cancel.png" />
        </Button>
    </Grid>
</Window>
