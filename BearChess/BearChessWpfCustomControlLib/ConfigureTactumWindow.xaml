<Window x:Class="www.SoLaNoSoft.com.BearChessWpfCustomControlLib.ConfigureTactumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib.Properties"    
        xmlns:local="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="Height" KeyDown="WinConfigureTactum_OnKeyDown"
      Title="{x:Static p:Resources.ConfigureTactum}" Height="330" Width="430" Icon="Assets/Icons/tabutronic_logo_def.png">
    <StackPanel>
        <Border Margin="5" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5" Text="{x:Static p:Resources.Current}" FontWeight="DemiBold"
                   HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Name="textBlockCurrentPort" Grid.Column="1" Grid.Row="0" Margin="5" Text="COM4"
                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="5" Text="{x:Static p:Resources.ComPorts}" FontWeight="DemiBold"
                   HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ComboBox Margin="5,5,5,5" Name="comboBoxComPorts" Grid.Column="1" Grid.Row="1" SelectionChanged="ComboBoxComPorts_OnSelectionChanged"
                  HorizontalAlignment="Center" Width="100" GotFocus="ComboBoxComPorts_OnGotFocus"
                  HorizontalContentAlignment="Center" VerticalAlignment="Center"
                  VerticalContentAlignment="Center" Height="32" />
                <Button Name="buttonCheck" Grid.Column="2" Grid.Row="1" Margin="10,5,5,5" Width="130" GotFocus="ButtonCheck_OnGotFocus"
                Click="ButtonCheck_OnClick" HorizontalAlignment="Right" VerticalAlignment="Center" ToolTip="{x:Static p:Resources.CheckSelectedCOMPortTip}"
                Visibility="Visible">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Name="textBlockCheck" VerticalAlignment="Center" Text="{x:Static p:Resources.Check}"></TextBlock>
                        <Image Source="Assets/Icons/connect.png" Width="32" />
                    </StackPanel>
                </Button>
                <TextBlock Name="textBlockInformation" Margin="5,5,5,5" Grid.Column="0" Grid.Row="2"
                   Visibility="Collapsed" TextWrapping="Wrap"
                   Foreground="IndianRed" Text="{x:Static p:Resources.NoCOMPortDetected}"
                   Grid.ColumnSpan="3" VerticalAlignment="Top" FontWeight="DemiBold" />

            </Grid>
        </Border>

        <Border Name="borderMoveLine" Visibility="Visible" Margin="5" BorderBrush="Gray" BorderThickness="1" >
            <StackPanel >
                <CheckBox VerticalContentAlignment="Center" Visibility="Visible" Margin="5" Name="checkBoxSayLiftUpDown" Content="{x:Static p:Resources.SayLiftUpDown}" GotFocus="CheckBoxSayLiftUpDown_OnGotFocus" Checked="CheckBox_OnChecked" Unchecked="CheckBox_OnUnchecked"/>
                <CheckBox VerticalContentAlignment="Center"  Visibility="Visible" Margin="5" Name="checkBoxPossibleMoves" Content="{x:Static p:Resources.SayAllMovesSelectedFigure}" GotFocus="CheckBoxPossibleMoves_OnGotFocus" Checked="CheckBox_OnChecked" Unchecked="CheckBox_OnUnchecked"/>
                <CheckBox VerticalContentAlignment="Center"  Visibility="Visible" Margin="5" Name="checkBoxBestMove"  Content="{x:Static p:Resources.SayBestMoveSelectedFigure}" GotFocus="CheckBoxBestMove_OnGotFocus" Checked="CheckBox_OnChecked" Unchecked="CheckBox_OnUnchecked"/>
            </StackPanel>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />

            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="0" Margin="5" HorizontalAlignment="Left" Name="buttonOk" Width="32"
            Height="32" ToolTip="{x:Static p:Resources.Ok}" GotFocus="ButtonOk_OnGotFocus"
            Click="ButtonOk_OnClick" Background="Transparent" BorderBrush="Transparent" >
                <Image Source="Assets/Icons/accept_button.png" />
            </Button>
            <Button Grid.Column="2" Grid.Row="0" Margin="5" HorizontalAlignment="Right" Name="buttonCancel" Width="32"
            Height="32" ToolTip="{x:Static p:Resources.Cancel}" GotFocus="ButtonCancel_OnGotFocus"
            Click="ButtonCancel_OnClick" Background="Transparent" BorderBrush="Transparent">
                <Image Source="Assets/Icons/cancel.png" />
            </Button>
        </Grid>

    </StackPanel>

</Window>
