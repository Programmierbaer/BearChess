<Window x:Class="www.SoLaNoSoft.com.BearChessWin.SelectFigureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWin.Properties"
        xmlns:local="clr-namespace:www.SoLaNoSoft.com.BearChessWin.Windows"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="Manual"
        Title="{x:Static p:Resources.Select}" Height="270" Width="170">
    <StackPanel Orientation="Horizontal"> 
   
    <StackPanel Name="stackPanelWhite" Margin="5" Orientation="Vertical" Height="Auto" VerticalAlignment="Top"
                    HorizontalAlignment="Left">
       
   
            <Button Name="buttonWhiteQueen" Margin="5" Width="32" Height="32" Background="Transparent"
                    Click="buttonWhiteQueen_Click">
            <Image Source="../Assets/Icons/White Q.ico" />
        </Button>
        <Button Name="buttonWhiteRook" Margin="5" Width="32" Height="32" Background="Transparent"
                    Click="buttonWhiteRook_Click">
            <Image Source="../Assets/Icons/White R.ico" />
        </Button>
        <Button Name="buttonWhiteKnight" Margin="5" Width="32" Height="32" Background="Transparent"
                    Click="buttonWhiteKnight_Click">
            <Image Source="../Assets/Icons/White N.ico" />
        </Button>
        <Button Name="buttonWhiteBishop" Margin="5" Width="32" Height="32" Background="Transparent"
                    Click="buttonWhiteBishop_Click">
            <Image Source="../Assets/Icons/White B.ico" />
        </Button>
        <Button Name="buttonWhitePawn" Margin="5" Width="32" Height="32" Background="Transparent"
                Click="buttonWhitePawn_Click">
            <Image Source="../Assets/Icons/White P.ico" />
        </Button>
        </StackPanel>
        <StackPanel Name="stackPanelBlack" Margin="5" Orientation="Vertical" Height="Auto" VerticalAlignment="Top"
                    HorizontalAlignment="Left" Visibility="Visible">
          
            <Button Name="buttonBlackQueen" Margin="5" Width="32" Height="32" Background="Transparent"
                    Click="ButtonBlackQueen_OnClick">
                <Image Source="../Assets/Icons/Black Q.ico" />
            </Button>
            <Button Name="buttonBlackRook" Margin="5" Width="32" Height="32" Background="Transparent"
                    Click="ButtonBlackRook_OnClick">
                <Image Source="../Assets/Icons/Black R.ico" />
            </Button>
            <Button Name="buttonBlackKnight" Margin="5" Width="32" Height="32" Background="Transparent"
                    Click="ButtonBlackKnight_OnClick">
                <Image Source="../Assets/Icons/Black N.ico" />
            </Button>
            <Button Name="buttonBlackBishop" Margin="5" Width="32" Height="32" Background="Transparent"
                    Click="ButtonBlackBishop_OnClick">
                <Image Source="../Assets/Icons/Black B.ico" />
            </Button>
            <Button Name="buttonBlackPawn" Margin="5" Width="32" Height="32" Background="Transparent"
                    Click="ButtonBlackPawn_OnClick">
                <Image Source="../Assets/Icons/Black P.ico" />
            </Button>
        </StackPanel>
        <StackPanel>
            <Button Name="buttonRemove" Margin="5" Width="32" Height="32" Background="Transparent"
                    Click="ButtonRemove_OnClick" ToolTip="Remove piece">
                <Image Source="../Assets/Icons/toggle.png" />
            </Button>
            <RadioButton Checked="RadioButtonWhite_OnChecked" Name="radioButtonWhite"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" GroupName="CurrentColor" IsChecked="True" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"  Content="c"></RadioButton>
            <RadioButton Checked="RadioButtonBlack_OnChecked" Name="radioButtonBlack"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" GroupName="CurrentColor" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"  Content="C"></RadioButton>
        </StackPanel>
    </StackPanel>
</Window>
