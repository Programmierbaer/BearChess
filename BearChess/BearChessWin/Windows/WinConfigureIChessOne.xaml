<Window x:Class="www.SoLaNoSoft.com.BearChessWin.WinConfigureIChessOne"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bearChessWin="clr-namespace:www.SoLaNoSoft.com.BearChessWin"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Title="Configure iChessOne" Height="830" Width="520" SizeToContent="WidthAndHeight">
    <StackPanel>
        <Border Margin="5" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5" Text="Current:" FontWeight="DemiBold"
                           HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Name="textBlockCurrentPort" Grid.Column="1" Grid.Row="0" Margin="5" Text="COM4"
                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="5" Text="COM-Ports:" FontWeight="DemiBold"
                           HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ComboBox Margin="5,5,5,5" Name="comboBoxComPorts" Grid.Column="1" Grid.Row="1"
                          HorizontalAlignment="Center" Width="100"
                          HorizontalContentAlignment="Center" VerticalAlignment="Center"
                          VerticalContentAlignment="Center" Height="32" />
                <Button Name="buttonCheck" Grid.Column="2" Grid.Row="1" Margin="10,5,5,5" Width="100"
                        HorizontalAlignment="Center" VerticalAlignment="Center" Click="ButtonCheck_OnClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Name="textBlockCheck" VerticalAlignment="Center">Check...</TextBlock>
                        <Image Source="../Assets/Icons/connect.png" Width="32" />
                    </StackPanel>
                </Button>
                <TextBlock Name="textBlockInformation" Margin="5,5,5,5" Grid.Column="0" Grid.Row="2"
                           Visibility="Collapsed"
                           Foreground="IndianRed" Text="No COM-Port detected. Check the connection to the chessboard."
                           Grid.ColumnSpan="3" VerticalAlignment="Top" FontWeight="DemiBold" />
                <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" Name="borderScans" Margin="5"
                        BorderBrush="Gray" BorderThickness="1">
                    <StackPanel Margin="0,5,0,5">
                        <DockPanel LastChildFill="False">
                            <CheckBox Name="checkBoxOnlyUpdate" DockPanel.Dock="Top"
                                      Unchecked="CheckBoxOnlyUpdate_OnUnchecked" Checked="CheckBoxOnlyUpdate_OnChecked"
                                      ToolTip="Board send current position only on updates" Margin="5">
                                Send only updates
                            </CheckBox>
                            <TextBlock DockPanel.Dock="Left" Margin="5" Text="Refresh..." Width="70"
                                       HorizontalAlignment="Left" VerticalAlignment="Center"
                                       ToolTip="How many times per millisecond the board should send the current position" />
                            <Button DockPanel.Dock="Left" Margin="0,0,0,0" HorizontalAlignment="Left"
                                    Name="buttonDelScan"
                                    Width="32"
                                    Height="32"
                                    Click="ButtonTimeDelete_OnClick" Background="Transparent" BorderBrush="Transparent"
                                    ToolTip="Decrement scan time">
                                <Image Source="../Assets/Icons/time_delete.png" />
                            </Button>

                            <Slider DockPanel.Dock="Left" Name="sliderScanTime" Margin="15,5,5,5" Minimum="250"
                                    Maximum="1000"
                                    Width="100" Value="250" IsSnapToTickEnabled="True" TickFrequency="10"
                                    ValueChanged="SliderScan_OnValueChanged" />

                            <Button DockPanel.Dock="Left" Margin="5,0,0,0" HorizontalAlignment="Left"
                                    Name="buttonPlusScan"
                                    Width="32"
                                    Height="32"
                                    Click="ButtonTimeAdd_OnClick" Background="Transparent" BorderBrush="Transparent"
                                    ToolTip="Increment scan time">
                                <Image Source="../Assets/Icons/time_add.png" />
                            </Button>
                            <TextBlock Name="textBlockScansPerSec" DockPanel.Dock="Left" HorizontalAlignment="Left"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center" Text="every ms" />
                        </DockPanel>

                    </StackPanel>
                </Border>

            </Grid>
        </Border>
        <Border Name="borderLEDs" Margin="5" BorderBrush="Gray" BorderThickness="1">
            <TabControl Height="580">
                <TabItem Header="LEDs">
                    <StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <DockPanel Margin="0,5,0,0" LastChildFill="False" Grid.Column="0" Grid.Row="0">
                                <TextBlock DockPanel.Dock="Left" Margin="5" Text="LEDs:" FontWeight="DemiBold"
                                           HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                    <Button Margin="5,0" Name="buttonShowDim" Background="Transparent"
                                            ToolTip="Connect to the board to test LEDs"
                                            BorderBrush="Transparent" Width="32" Height="32" Click="ButtonShowDim_OnClick">
                                        <Image Source="../Assets/Icons/eye.png" />
                                    </Button>
                                    <Button Margin="5,0" Name="buttonShowDim2" Background="Transparent"
                                            Visibility="Collapsed"
                                            ToolTip="Disconnect from the board"
                                            BorderBrush="Transparent" Width="32" Height="32" Click="ButtonShowDim_OnClick">
                                        <Image Source="../Assets/Icons/eye_half.png" />
                                    </Button>
                                </StackPanel>

                            </DockPanel>
                            <Image Margin="5,0,5,0" Grid.Column="1" Grid.Row="0"
                                   Source="../Assets/Icons/bullet_red.png" VerticalAlignment="Center"
                                   HorizontalAlignment="Center" ToolTip="Red" />
                            <Image Margin="5,0,5,0" Grid.Column="2" Grid.Row="0"
                                   Source="../Assets/Icons/bullet_green.png" VerticalAlignment="Center"
                                   HorizontalAlignment="Center" ToolTip="Green" />
                            <Image Margin="5,0,5,0" Grid.Column="3" Grid.Row="0"
                                   Source="../Assets/Icons/bullet_blue.png" VerticalAlignment="Center"
                                   HorizontalAlignment="Center" ToolTip="Blue" />
                            <Image Margin="5,0,5,0" Grid.Column="4" Grid.Row="0" Source="../Assets/Icons/lightbulb.png"
                                   Width="20" HorizontalAlignment="Center" ToolTip="Brightness" />
                            <Image Margin="5,0,5,0" Grid.Column="5" Grid.Row="0" Source="../Assets/Icons/lightning.png"
                                   Width="20" HorizontalAlignment="Center" ToolTip="Flash" />
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                      Margin="25,0,5,0" ToolTip="From field"
                                      Grid.Column="0" Grid.Row="1">
                                Move From
                            </TextBlock>
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                       Margin="25,0,5,0" ToolTip="To field"
                                       Grid.Column="0" Grid.Row="2">
                                Move To
                            </TextBlock>
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="1" Grid.Row="1"
                                                                   x:Name="numericUpDownUserControlMoveFromRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="2" Grid.Row="1"
                                                                   x:Name="numericUpDownUserControlMoveFromGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="3" Grid.Row="1"
                                                                   x:Name="numericUpDownUserControlMoveFromBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="4" Grid.Row="1"
                                                                   x:Name="numericUpDownUserControlMoveDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="5,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Grid.Column="5"
                                      Grid.Row="1" Name="checkBoxFlashMoveFrom" Checked="RadioButtonSync_OnChecked" />

                            <Button Grid.Column="6" Grid.Row="1" Margin="5" Name="buttonShowMoveFrom"
                                    Background="Transparent" ToolTip="Show LEDs"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>

                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="1" Grid.Row="2"
                                                                   x:Name="numericUpDownUserControlMoveToRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="2" Grid.Row="2"
                                                                   x:Name="numericUpDownUserControlMoveToGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="3" Grid.Row="2"
                                                                   x:Name="numericUpDownUserControlMoveToBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="4" Grid.Row="2"
                                                                   x:Name="numericUpDownUserControlMoveToDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="5,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Grid.Column="5"
                                      Grid.Row="2" Name="checkBoxFlashMoveTo" Checked="RadioButtonSync_OnChecked" />


                            <Button Grid.Column="6" Grid.Row="3" Margin="5" Name="buttonShowInvalid"
                                    Background="Transparent" ToolTip="Show LEDs"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="6" Grid.Row="4" Margin="6" Name="buttonShowTakeBack"
                                    Background="Transparent" ToolTip="Show LEDs"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="6" Grid.Row="5" Margin="5" Name="buttonShowHint"
                                    Background="Transparent" ToolTip="Show LEDs"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="6" Grid.Row="6" Margin="5" Name="buttonShowCurrentColor"
                                    Background="Transparent" ToolTip="Show LEDs"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="6" Grid.Row="7" Margin="5" Name="buttonShowCurrentAdvantage"
                                    Background="Transparent" ToolTip="Show LEDs"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="6" Grid.Row="8" Margin="5" Name="buttonShowCurrentDisAdvantage"
                                    Background="Transparent" ToolTip="Show LEDs"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>

                            <CheckBox HorizontalAlignment="Left" VerticalAlignment="Center" Name="checkBoxInvalidMoves"
                                      Margin="5,5,5,0" ToolTip="Invalid fields"
                                      Grid.Column="0" Grid.Row="3">
                                Invalid
                            </CheckBox>
                            <bearChessWin:NumericUpDownUserControl Margin="5" Grid.Column="1" Grid.Row="3"
                                                                   x:Name="numericUpDownUserControlInvalidRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="3"
                                                                   x:Name="numericUpDownUserControlInvalidGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="3"
                                                                   TextWidthProperty="30"
                                                                   x:Name="numericUpDownUserControlInvalidBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="4" Grid.Row="3"
                                                                   x:Name="numericUpDownUserControlInvalidDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="5,5,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Grid.Column="5"
                                      Grid.Row="3" Name="checkBoxFlashInvalid" Checked="RadioButtonSync_OnChecked" />

                            <CheckBox HorizontalAlignment="Left" VerticalAlignment="Center" Name="checkBoxTakeBackMove"
                                      Margin="5" ToolTip="From and to field when undoing a chess move"
                                      Grid.Column="0" Grid.Row="4">
                                Take Back
                            </CheckBox>
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="1" Grid.Row="4"
                                                                   x:Name="numericUpDownUserControlTakeBackRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="4"
                                                                   x:Name="numericUpDownUserControlTakeBackGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="4"
                                                                   x:Name="numericUpDownUserControlTakeBackBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="4" Grid.Row="4"
                                                                   x:Name="numericUpDownUserControlTakeBackDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="5,5,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Grid.Column="5"
                                      Grid.Row="4" Name="checkBoxFlashTakeBack" Checked="RadioButtonSync_OnChecked" />

                            <CheckBox HorizontalAlignment="Left" VerticalAlignment="Center" Name="checkBoxHintMoves"
                                      Margin="5,5,5,0" ToolTip="From and to field for a hint on the best move"
                                      Grid.Column="0" Grid.Row="5">
                                Hint
                            </CheckBox>
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="1" Grid.Row="5"
                                                                   x:Name="numericUpDownUserControlHintRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="5"
                                                                   x:Name="numericUpDownUserControlHintGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="5"
                                                                   x:Name="numericUpDownUserControlHintBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="4" Grid.Row="5"
                                                                   x:Name="numericUpDownUserControlHintDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="5,5,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Grid.Column="5"
                                      Grid.Row="5" Name="checkBoxFlashHint" Checked="RadioButtonSync_OnChecked" />


                            <CheckBox Name="checkBoxCurrentColor"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,5,5,0"
                                      ToolTip="Which board side is currently on the move"
                                      Grid.Column="0" Grid.Row="6">
                                Current color
                            </CheckBox>

                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="1" Grid.Row="6"
                                                                   x:Name="numericUpDownUserControlCurrentColorRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="6"
                                                                   x:Name="numericUpDownUserControlCurrentColorGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="6"
                                                                   x:Name="numericUpDownUserControlCurrentColorBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="4" Grid.Row="6"
                                                                   x:Name="numericUpDownUserControlCurrentColorDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="5,5,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Grid.Column="5"
                                      Grid.Row="6" Name="checkBoxFlashCurrentColor" Checked="RadioButtonSync_OnChecked" />


                            <CheckBox Name="checkBoxShowEval" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,5,5,0"
                                      ToolTip="If there is currently an advantage in the valuation"
                                      Grid.Column="0" Grid.Row="7">
                                Valuation: Advantage
                            </CheckBox>

                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="1" Grid.Row="7"
                                                                   x:Name="numericUpDownUserControlEvaluationRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="7"
                                                                   x:Name="numericUpDownUserControlEvaluationGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="7"
                                                                   x:Name="numericUpDownUserControlEvaluationBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="4" Grid.Row="7"
                                                                   x:Name="numericUpDownUserControlEvaluationDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="5,5,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Grid.Column="5"
                                      Grid.Row="7" Name="checkBoxFlashEvaluation" Checked="RadioButtonSync_OnChecked" />

                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="65,5,5,0"
                                       ToolTip="If there is currently a disadvantage in the valuation"
                                       Grid.Column="0" Grid.Row="8">
                                Disadvantage
                            </TextBlock>

                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="1" Grid.Row="8"
                                                                   x:Name="numericUpDownUserControlDisEvaluationRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="8"
                                                                   x:Name="numericUpDownUserControlDisEvaluationGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="8"
                                                                   x:Name="numericUpDownUserControlDisEvaluationBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="4" Grid.Row="8"
                                                                   x:Name="numericUpDownUserControlDisEvaluationDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="5,5,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Grid.Column="5"
                                      Grid.Row="8" Name="checkBoxFlashDisEvaluation"
                                      Checked="RadioButtonSync_OnChecked" />

                            <CheckBox Name="checkBoxPossibleMoves" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,5,5,0"
           ToolTip="Show possible moves if you lift up a figure" Checked="CheckBoxPossibleMoves_OnChecked" Unchecked="CheckBoxPossibleMoves_OnUnchecked"
           Grid.Column="0" Grid.Row="9">
                                Possible moves
                            </CheckBox>

                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="1" Grid.Row="9"
                                        x:Name="numericUpDownUserControlPossibleMovesRed"
                                        MinValue="0"
                                        MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="9"
                                        x:Name="numericUpDownUserControlPossibleMovesGreen"
                                        MinValue="0"
                                        MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="9"
                                        x:Name="numericUpDownUserControlPossibleMovesBlue"
                                        MinValue="0"
                                        MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="4" Grid.Row="9"
                                        x:Name="numericUpDownUserControlPossibleMovesDim"
                                        MinValue="0"
                                        MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="5,5,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"
           Grid.Column="5"
           Grid.Row="9" Name="checkBoxFlashPossibleMoves"
           Checked="RadioButtonSync_OnChecked" />
                            <Button Grid.Column="6" Grid.Row="9" Margin="5" Name="buttonShowCurrentPossibleMoves"
         Background="Transparent" ToolTip="Show LEDs"
         BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>

                            <CheckBox Name="checkBoxPossibleMovesEval" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,5,5,0"
                                      ToolTip="This is a good move"
                                      Grid.Column="0" Grid.Row="10">
                                Evaluation: good
                            </CheckBox>

                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="1" Grid.Row="10"
                                                                   x:Name="numericUpDownUserControlGoodMoveEvaluationRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="10"
                                                                   x:Name="numericUpDownUserControlGoodMoveEvaluationGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="10"
                                                                   x:Name="numericUpDownUserControlGoodMoveEvaluationBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="4" Grid.Row="10"
                                                                   x:Name="numericUpDownUserControlGoodMoveEvaluationDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="5,5,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Grid.Column="5"
                                      Grid.Row="10" Name="checkBoxFlashGoodMoveEvaluation"
                                      Checked="RadioButtonSync_OnChecked" />
                            <Button Grid.Column="6" Grid.Row="10" Margin="0,11,6,11" Name="buttonShowCurrentGoodMoveEvaluation"
                                    Background="Transparent" ToolTip="Show LEDs"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick" HorizontalAlignment="Right">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>

                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="120,5,5,0"
