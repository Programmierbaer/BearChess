<Window x:Class="www.SoLaNoSoft.com.BearChessWin.WinConfigureIChessOne"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bearChessWin="clr-namespace:www.SoLaNoSoft.com.BearChessWin"
        xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWin.Properties"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Title="{x:Static p:Resources.ConfigureIChessOne}" Height="880" Width="610" SizeToContent="WidthAndHeight">
    <StackPanel>
        <Border Margin="5" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5" Text="{x:Static p:Resources.Current}" FontWeight="DemiBold"
                           HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Name="textBlockCurrentPort" Grid.Column="1" Grid.Row="0" Margin="5" Text="COM4"
                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="5" Text="{x:Static p:Resources.ComPorts}" FontWeight="DemiBold"
                           HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ComboBox Margin="5,5,5,5" Name="comboBoxComPorts" Grid.Column="1" Grid.Row="1"
                          HorizontalAlignment="Center" Width="100"
                          HorizontalContentAlignment="Center" VerticalAlignment="Center"
                          VerticalContentAlignment="Center" Height="32" />
                <Button Name="buttonCheck" Grid.Column="2" Grid.Row="1" Margin="10,5,5,5" Width="100"
                        HorizontalAlignment="Center" VerticalAlignment="Center" Click="ButtonCheck_OnClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Name="textBlockCheck" VerticalAlignment="Center" Text="{x:Static p:Resources.Check}"/>
                        <Image Source="../Assets/Icons/connect.png" Width="32" />
                    </StackPanel>
                </Button>
                <TextBlock Name="textBlockInformation" Margin="5,5,5,5" Grid.Column="0" Grid.Row="2"
                           Visibility="Collapsed" TextWrapping="Wrap"
                           Foreground="IndianRed" Text="{x:Static p:Resources.NoCOMPortDetected}"
                           Grid.ColumnSpan="3" VerticalAlignment="Top" FontWeight="DemiBold" />
                <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" Name="borderScans" Margin="5"
                        BorderBrush="Gray" BorderThickness="1">
                    <StackPanel Margin="0,5,0,5">
                        <DockPanel LastChildFill="False">
                            <CheckBox Name="checkBoxOnlyUpdate" DockPanel.Dock="Top"
                                      Unchecked="CheckBoxOnlyUpdate_OnUnchecked" Checked="CheckBoxOnlyUpdate_OnChecked"
                                      ToolTip="{x:Static p:Resources.BoardSendOnlyUpdates}" Margin="5" Content="{x:Static p:Resources.SendOnlyUpdates}">

                            </CheckBox>
                            <TextBlock DockPanel.Dock="Left" Margin="5" Text="{x:Static p:Resources.Refresh}" Width="80"
                                       HorizontalAlignment="Left" VerticalAlignment="Center"
                                       ToolTip="{x:Static p:Resources.RefreshInMS}" />
                            <Button DockPanel.Dock="Left" Margin="0,0,0,0" HorizontalAlignment="Left"
                                    Name="buttonDelScan"
                                    Width="32"
                                    Height="32"
                                    Click="ButtonTimeDelete_OnClick" Background="Transparent" BorderBrush="Transparent"
                                    ToolTip="{x:Static p:Resources.DecrementScanTime}">
                                <Image Source="../Assets/Icons/time_delete.png" />
                            </Button>

                            <Slider DockPanel.Dock="Left" Name="sliderScanTime" Margin="15,5,5,5" Minimum="250"
                                    Maximum="1000"
                                    Width="100" Value="250" IsSnapToTickEnabled="True" TickFrequency="10"
                                    ValueChanged="SliderScan_OnValueChanged" />

                            <Button DockPanel.Dock="Left" Margin="5,0,0,0" HorizontalAlignment="Left"
                                    Name="buttonPlusScan"
                                    Width="32"
                                    Height="32"
                                    Click="ButtonTimeAdd_OnClick" Background="Transparent" BorderBrush="Transparent"
                                    ToolTip="{x:Static p:Resources.IncrementScanTime}">
                                <Image Source="../Assets/Icons/time_add.png" />
                            </Button>
                            <TextBlock Name="textBlockScansPerSec" DockPanel.Dock="Left" HorizontalAlignment="Left"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center" Text="{x:Static p:Resources.EveryMS}" />
                        </DockPanel>

                    </StackPanel>
                </Border>

            </Grid>
        </Border>
        <Border Name="borderLEDs" Margin="5" BorderBrush="Gray" BorderThickness="1">
            <TabControl Height="620">
                <TabItem Header="{x:Static p:Resources.LEDs}">
                    <StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <DockPanel Margin="0,5,0,0" LastChildFill="False" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
                                <TextBlock DockPanel.Dock="Left" Margin="5" Text="{x:Static p:Resources.LEDs}" FontWeight="DemiBold"
                                           HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                    <Button Margin="5,0" Name="buttonShowDim" Background="Transparent"
                                            ToolTip="{x:Static p:Resources.ConnectTestLEDs}"
                                            BorderBrush="Transparent" Width="32" Height="32" Click="ButtonShowDim_OnClick">
                                        <Image Source="../Assets/Icons/eye.png" />
                                    </Button>
                                    <Button Margin="5,0" Name="buttonShowDim2" Background="Transparent"
                                            Visibility="Collapsed"
                                            ToolTip="{x:Static p:Resources.Disconnect}"
                                            BorderBrush="Transparent" Width="32" Height="32" Click="ButtonShowDim_OnClick">
                                        <Image Source="../Assets/Icons/eye_half.png" />
                                    </Button>
                                </StackPanel>

                            </DockPanel>
                            <Image Grid.Column="2" Grid.Row="0" 
                                   Source="../Assets/Icons/bullet_red.png" VerticalAlignment="Center"
                                   HorizontalAlignment="Center"  ToolTip="{x:Static p:Resources.Red}" />
                            <Image Grid.Column="3" Grid.Row="0" 
                                   Source="../Assets/Icons/bullet_green.png" VerticalAlignment="Center"
                                   HorizontalAlignment="Center"  ToolTip="{x:Static p:Resources.Green}" />
                            <Image Grid.Column="4" Grid.Row="0" 
                                   Source="../Assets/Icons/bullet_blue.png" VerticalAlignment="Center"
                                   HorizontalAlignment="Center"  ToolTip="{x:Static p:Resources.Blue}" />
                            <Image Grid.Column="5" Grid.Row="0" Source="../Assets/Icons/lightbulb.png"
                                   Width="20" HorizontalAlignment="Center" ToolTip="{x:Static p:Resources.Brightness}" />
                            <Image Grid.Column="6" Grid.Row="0" Source="../Assets/Icons/lightning.png"
                                   Width="20" HorizontalAlignment="Center" ToolTip="{x:Static p:Resources.Flash}" />
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                      Margin="25,0,0,0" ToolTip="{x:Static p:Resources.FromField}"
                                      Grid.Column="0" Grid.Row="1" Text="{x:Static p:Resources.MoveFrom}"/>
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                       Margin="25,0,0,0" ToolTip="{x:Static p:Resources.ToField}"
                                       Grid.Column="0" Grid.Row="2" Text="{x:Static p:Resources.MoveTo}"/>
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="2" Grid.Row="1"
                                                                   x:Name="numericUpDownUserControlMoveFromRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="3" Grid.Row="1"
                                                                   x:Name="numericUpDownUserControlMoveFromGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="4" Grid.Row="1"
                                                                   x:Name="numericUpDownUserControlMoveFromBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="5" Grid.Row="1"
                                                                   x:Name="numericUpDownUserControlMoveDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Grid.Column="6"
                                      Grid.Row="1" Name="checkBoxFlashMoveFrom" Checked="RadioButtonSync_OnChecked" />

                            <Button Grid.Column="7" Grid.Row="1" Margin="6,9,6,8" Name="buttonShowMoveFrom"
                                    Background="Transparent"  ToolTip="{x:Static p:Resources.ShowLEDs}"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>

                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="2" Grid.Row="2"
                                                                   x:Name="numericUpDownUserControlMoveToRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="3" Grid.Row="2"
                                                                   x:Name="numericUpDownUserControlMoveToGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="4" Grid.Row="2"
                                                                   x:Name="numericUpDownUserControlMoveToBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="5" Grid.Row="2"
                                                                   x:Name="numericUpDownUserControlMoveToDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Grid.Column="6"
                                      Grid.Row="2" Name="checkBoxFlashMoveTo" Checked="RadioButtonSync_OnChecked" />


                            <Button Grid.Column="7" Grid.Row="3" Margin="6,13,6,14" Name="buttonShowInvalid"
                                    Background="Transparent"  ToolTip="{x:Static p:Resources.ShowLEDs}"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="7" Grid.Row="4" Margin="6,11,6,11" Name="buttonShowTakeBack"
                                    Background="Transparent"  ToolTip="{x:Static p:Resources.ShowLEDs}"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="7" Grid.Row="5" Margin="6,11,6,11" Name="buttonShowHint"
                                    Background="Transparent"  ToolTip="{x:Static p:Resources.ShowLEDs}"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="7" Grid.Row="6" Margin="6,11,6,11" Name="buttonShowBookMove"
                                    Background="Transparent"  ToolTip="{x:Static p:Resources.ShowLEDs}"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="7" Grid.Row="7" Margin="6,11,6,11" Name="buttonShowCurrentColor"
                                    Background="Transparent"  ToolTip="{x:Static p:Resources.ShowLEDs}"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="7" Grid.Row="8" Margin="6,11,6,11" Name="buttonShowCurrentAdvantage"
                                    Background="Transparent"  ToolTip="{x:Static p:Resources.ShowLEDs}"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="7" Grid.Row="9" Margin="6,11,6,11" Name="buttonShowCurrentDisAdvantage"
                                    Background="Transparent"  ToolTip="{x:Static p:Resources.ShowLEDs}"
                                    BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="../Assets/Icons/eye.png" />
                            </Button>

                            <CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Name="checkBoxInvalidMoves"
                                      Margin="5,18,0,0" ToolTip="{x:Static p:Resources.InvalidFields}" 
                                      Grid.Column="0" Grid.Row="3" Content="{x:Static p:Resources.Invalid}"/>
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,5" Grid.Column="2" Grid.Row="3"
                                                                   x:Name="numericUpDownUserControlInvalidRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="3"
                                                                   x:Name="numericUpDownUserControlInvalidGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="4" Grid.Row="3"
                                                                   TextWidthProperty="30"
                                                                   x:Name="numericUpDownUserControlInvalidBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="5" Grid.Row="3"
                                                                   x:Name="numericUpDownUserControlInvalidDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="0,18,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                                      Grid.Column="6"
                                      Grid.Row="3" Name="checkBoxFlashInvalid" Checked="RadioButtonSync_OnChecked" />

                            <CheckBox HorizontalAlignment="Left" VerticalAlignment="Center" Name="checkBoxTakeBackMove"
                                      Margin="5,0,0,0" ToolTip="{x:Static p:Resources.FromAndToFieldUndo}"
                                      Grid.Column="0" Grid.Row="4" Content="{x:Static p:Resources.TakeBack}"/>
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="4"
                                                                   x:Name="numericUpDownUserControlTakeBackRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="4"
                                                                   x:Name="numericUpDownUserControlTakeBackGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="4" Grid.Row="4"
                                                                   x:Name="numericUpDownUserControlTakeBackBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="5" Grid.Row="4"
                                                                   x:Name="numericUpDownUserControlTakeBackDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="0,16,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                                      Grid.Column="6"
                                      Grid.Row="4" Name="checkBoxFlashTakeBack" Checked="RadioButtonSync_OnChecked" />

                            <CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Name="checkBoxHintMoves"
                                      Margin="5,16,0,0" ToolTip="{x:Static p:Resources.FromAndToFieldForHint}"
                                      Grid.Column="0" Grid.Row="5" Content="{x:Static p:Resources.Hint}"/>
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="5"
                                                                   x:Name="numericUpDownUserControlHintRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="5"
                                                                   x:Name="numericUpDownUserControlHintGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="4" Grid.Row="5"
                                                                   x:Name="numericUpDownUserControlHintBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="5" Grid.Row="5"
                                                                   x:Name="numericUpDownUserControlHintDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="0,16,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                                      Grid.Column="6"
                                      Grid.Row="5" Name="checkBoxFlashHint" Checked="RadioButtonSync_OnChecked" />

                            <CheckBox Name="checkBoxBookMove"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,16,0,0"
                                      ToolTip="{x:Static p:Resources.ShowBestBookMove}"
                                      Grid.Column="0" Grid.Row="6" Content="{x:Static p:Resources.BookMove}"/>

                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="6"
                                                                   x:Name="numericUpDownUserControlBookRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="6"
                                                                   x:Name="numericUpDownUserControlBookGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="4" Grid.Row="6"
                                                                   x:Name="numericUpDownUserControlBookBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="5" Grid.Row="6"
                                                                   x:Name="numericUpDownUserControlBookDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="0,16,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                                      Grid.Column="6"
                                      Grid.Row="6" Name="checkBoxFlashBook" Checked="RadioButtonSync_OnChecked" />





                            <CheckBox Name="checkBoxCurrentColor"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,16,0,0"
                                      ToolTip="{x:Static p:Resources.CurrentColorTip}"
                                      Grid.Column="0" Grid.Row="7" Content="{x:Static p:Resources.CurrentColor}"/>

                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="7"
                                                                   x:Name="numericUpDownUserControlCurrentColorRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="7"
                                                                   x:Name="numericUpDownUserControlCurrentColorGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="4" Grid.Row="7"
                                                                   x:Name="numericUpDownUserControlCurrentColorBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="5" Grid.Row="7"
                                                                   x:Name="numericUpDownUserControlCurrentColorDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="0,16,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                                      Grid.Column="6"
                                      Grid.Row="7" Name="checkBoxFlashCurrentColor" Checked="RadioButtonSync_OnChecked" />


                            <CheckBox Name="checkBoxShowEval" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,16,0,0"
                                      ToolTip="{x:Static p:Resources.IfCurrentAdvantage}"
                                      Grid.Column="0" Grid.Row="8" Content="{x:Static p:Resources.ValuationAdvantage}" Grid.ColumnSpan="2"/>

                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="8"
                                                                   x:Name="numericUpDownUserControlEvaluationRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="8"
                                                                   x:Name="numericUpDownUserControlEvaluationGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="4" Grid.Row="8"
                                                                   x:Name="numericUpDownUserControlEvaluationBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="5" Grid.Row="8"
                                                                   x:Name="numericUpDownUserControlEvaluationDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="0,16,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                                      Grid.Column="6"
                                      Grid.Row="8" Name="checkBoxFlashEvaluation" Checked="RadioButtonSync_OnChecked" />

                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="65,16,0,0"
                                       ToolTip="{x:Static p:Resources.IfCurrentDisadvantage}"
                                       Grid.Column="0" Grid.Row="9" Text="{x:Static p:Resources.Disadvantage}"/>

                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="9"
                                                                   x:Name="numericUpDownUserControlDisEvaluationRed"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="9"
                                                                   x:Name="numericUpDownUserControlDisEvaluationGreen"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="4" Grid.Row="9"
                                                                   x:Name="numericUpDownUserControlDisEvaluationBlue"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,0,5,0" Grid.Column="5" Grid.Row="9"
                                                                   x:Name="numericUpDownUserControlDisEvaluationDim"
                                                                   MinValue="0"
                                                                   MaxValue="15" TextWidthProperty="30" />
                            <CheckBox Margin="0,16,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                                      Grid.Column="6"
                                      Grid.Row="9" Name="checkBoxFlashDisEvaluation"
                                      Checked="RadioButtonSync_OnChecked" />

                            <CheckBox Name="checkBoxPossibleMoves" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,16,0,0"
           ToolTip="{x:Static p:Resources.ShowPossibleMovesOfFigure}" Checked="CheckBoxPossibleMoves_OnChecked" Unchecked="CheckBoxPossibleMoves_OnUnchecked"
           Grid.Column="0" Grid.Row="10" Content="{x:Static p:Resources.PossibleMoves}"/>

                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="2" Grid.Row="10"
                                        x:Name="numericUpDownUserControlPossibleMovesRed"
                                        MinValue="0"
                                        MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="3" Grid.Row="10"
                                        x:Name="numericUpDownUserControlPossibleMovesGreen"
                                        MinValue="0"
                                        MaxValue="15" TextWidthProperty="30" />
                            <bearChessWin:NumericUpDownUserControl Margin="5,5,5,0" Grid.Column="4" Grid.Row="10"
                                        x:Name="numericUpDownUserControlPossibleMovesBlue"
                                        MinValue="0"
                                        MaxValue="15" TextWidthProperty="30" />
