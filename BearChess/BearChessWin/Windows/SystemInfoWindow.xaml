<Window x:Class="www.SoLaNoSoft.com.BearChessWin.SystemInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:www.SoLaNoSoft.com.BearChessWin.Windows" Loaded="SystemInfoWindow_OnLoaded"
        mc:Ignorable="d" Icon="../BearChess.ico" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Title="System Information" MinHeight="250" MinWidth="400" SizeToContent="WidthAndHeight">
    <DockPanel LastChildFill="False">
         <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="10"  Grid.Column="0"  FontWeight="DemiBold" VerticalAlignment="Center"  Text="Path:"></TextBlock>
            <TextBlock Margin="10" Name="textBlockPath" Grid.Column="1"  VerticalAlignment="Center"></TextBlock>
             <Button Margin="10" Height="32" Name="buttonPath" Grid.Column="2" Click="ButtonPath_OnClick">
                 <StackPanel Orientation="Horizontal" >
                    <Image Margin="5" Source="../Assets/Icons/folder.png"></Image>
                     <TextBlock Margin="5" TextAlignment="Center" VerticalAlignment="Center" Text="Open..."></TextBlock>
                 </StackPanel>
             </Button>
         </Grid>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <TextBlock Margin="10"  Grid.Column="0"  FontWeight="DemiBold" VerticalAlignment="Center"  Text="Chessboard:"></TextBlock>
            <TextBlock Margin="10" Name="textBlockBoard" Grid.Column="1"  TextWrapping="Wrap" VerticalAlignment="Center"></TextBlock>
        </Grid>
        <Button DockPanel.Dock="Bottom" Margin="5" HorizontalAlignment="Left" Width="32"
                Height="32" 
                Click="ButtonOk_OnClick" Background="Transparent" BorderBrush="Transparent" ToolTip="Ok">
            <Image Source="../Assets/Icons/accept_button.png" />
        </Button>
    </DockPanel>
</Window>
