<UserControl x:Class="www.SoLaNoSoft.com.BearChessWin.EngineInfoLineUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:www.SoLaNoSoft.com.BearChessWin"
             mc:Ignorable="d" Background="AliceBlue" FontSize="18"
             d:DesignHeight="200" d:DesignWidth="400">

    <DockPanel LastChildFill="True" Margin="0,0,0,5">
        <TextBlock DockPanel.Dock="Left" Name="textBlockMV" Width="20" Margin="5" HorizontalAlignment="Right" TextAlignment="Right" >1.</TextBlock>
        <TextBlock DockPanel.Dock="Left" Name="textBlockMVValue"  Margin="5" MinWidth="40" HorizontalAlignment="Right" TextAlignment="Right" FontWeight="DemiBold"/>
        <ScrollViewer Name="scrollViewer" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
            <TextBlock DockPanel.Dock="Left" Name="textBlockMvLine" Margin="5" />
        </ScrollViewer>
    </DockPanel>

</UserControl>