<UserControl x:Class="www.SoLaNoSoft.com.BearChessWin.ChessClockUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWin.Properties"
             xmlns:local="clr-namespace:www.SoLaNoSoft.com.BearChessWin.UserControls"
             mc:Ignorable="d"  FontWeight="DemiBold" FontFamily="Square721 BT" FontSize="35"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,1,0,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"  Grid.Row="0" Grid.Column="0" Margin="0" Grid.ColumnSpan="5" Name="textBlockTitle" FontSize="12" FontFamily="Segoe UI" />
        <Border Margin="5,0,5,0" Name="borderWarning" Height="5" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Background="Red" Visibility="Visible"/>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center"  Grid.Row="2" Grid.Column="0" Margin="0" Name="textBlockHour1" FontFamily="Square721 BT">00</TextBlock>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="2"  Grid.Column="1" Margin="0" Name="textBlock1" FontFamily="Square721 BT">:</TextBlock>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="2"  Grid.Column="2" Margin="0" Name="textBlockMin1" FontFamily="Square721 BT">00</TextBlock>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="2"  Grid.Column="3" Margin="0" Name="textBlock2" FontFamily="Square721 BT" >:</TextBlock>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="2"  Grid.Column="4" Margin="0"  Name="textBlockSec1" FontFamily="Square721 BT">00</TextBlock>
        <TextBlock Name="textBlockInfo" Margin="5,0,0,0" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" FontSize="12" FontWeight="Normal" FontFamily="Segoe UI"  />

    </Grid>
</UserControl>
